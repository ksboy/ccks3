    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal"
        },
        {
            "name": "Transformers",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "1"
            },
            "args": [
                "--task",
                "trigger",
                "--model_type",
                "bert",
                "--model_name_or_path",
                "/home/mhxia/whou/workspace/pretrained_models/chinese_roberta_wwm_large_ext_pytorch",
                "--do_train",
                "--do_eval",
                "--evaluate_during_training",
                "--eval_all_checkpoints",
                "--data_dir",
                "./data/trigger_classify/",
                // "--overwrite_cache",
                "--do_lower_case",
                "--keep_accents",
                "--schema",
                "./data/event_schema/event_schema.json",
                "--output_dir",
                "./output/trigger_classify/",
                "--overwrite_output_dir",
                "--max_seq_length",
                "256",
                "--per_gpu_train_batch_size",
                "6",
                "--per_gpu_eval_batch_size",
                "64",
                "--gradient_accumulation_steps",
                "1",
                "--save_steps",
                "4",
                "--logging_steps",
                "100",
                "--num_train_epochs",
                "7",
                "--early_stop",
                "4",
                "--learning_rate",
                "3e-5",
                "--weight_decay",
                "0",
                "--warmup_steps",
                "1000",
                "--seed",
                "1"
            ]
        }
    ]
}